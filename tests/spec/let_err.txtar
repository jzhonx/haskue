-- let_err1 --
// unreferenced variable x
let x = 0
-- exp_let_err1 --
error: unreferenced let clause let "x"

-- let_err2 --
// redeclared in the same block (y has been declared in the top block)
y: 1
x: {
  let y = 2
  z: y
}
-- exp_let_err2 --
error: can not have both alias and field with name "y" in the same scope

-- let_err3 --
let y = 2
z: y
x: {
  // redeclared in the same block (y has been declared in the top block)
  y: 2
}
-- exp_let_err3 --
error: can not have both alias and field with name "y" in the same scope

-- let_err4 --
let x = 1
let x = 1
y: x
-- exp_let_err4 --
error: "x" redeclared in same scope

-- let_err5 --
// let binding x must be referenced as the first segment of a path.
t: {
	let x = 1
	y: t.x
}
-- exp_let_err5 --
error: unreferenced let clause let "x"

